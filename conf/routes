# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                                   controllers.HomeController.index()
GET     /customerPage                       controllers.HomeController.customerPage()
GET     /productPage                        controllers.HomeController.productPage()
GET     /orderPage                          controllers.HomeController.orderPage()


# Customer
GET     /customerFindAll                    controllers.CustomerController.customerFindAll()
GET     /findByUsername                     controllers.CustomerController.findByUsername(username: String)

GET     /customerForms                      controllers.CustomerController.customerCreateForms
GET     /customerUpdateForms                controllers.CustomerController.customerUpdateForms
GET     /customerDeleteForms                controllers.CustomerController.customerDeleteForms
+ nocsrf
POST    /customerForms                      controllers.CustomerController.customerCreateFormsAction
+ nocsrf
PUT     /customerUpdateForms                controllers.CustomerController.customerUpdateFormsPut(username: String)
DELETE  /customerDeleteFormsDelete          controllers.CustomerController.customerDeleteFormsDelete(username: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

