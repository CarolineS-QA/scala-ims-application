# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                                   controllers.HomeController.index()
GET     /customerPage                       controllers.HomeController.customerPage()
GET     /productPage                        controllers.HomeController.productPage()
GET     /orderPage                          controllers.HomeController.orderPage()
GET     /findByUsername                     controllers.HomeController.findByUsername(username: String)

GET     /customerForms                      controllers.HomeController.customerForms
POST    /customerForms                      controllers.HomeController.customerFormsPost


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

